<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent">

	<TextView
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="wrap_content"
		android:text="@string/guide_title"
		android:id="@+id/textview_title"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="20dp"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:layout_centerHorizontal="true"
		android:layout_below="@id/textview_title"
		android:layout_marginTop="30dp"
		android:id="@+id/guide_layout_1"
		android:gravity="center">

		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content"
			android:text="@string/guide_first_text"/>

		<View
			android:layout_height="15dp"
			android:layout_width="match_parent"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="@string/guide_first_text_button"
			android:id="@+id/button_service"/>

		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:text="@string/service_run"
			android:id="@+id/textview_service_run"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:layout_below="@id/guide_layout_1"
		android:id="@+id/guide_layout_2"
		android:gravity="center"
		android:layout_marginTop="30dp">

		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content"
			android:text="@string/guide_second_text"/>

		<View
			android:layout_height="15dp"
			android:layout_width="match_parent"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="@string/guide_second_text_button"
			android:id="@+id/button_root"/>

	</LinearLayout>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="@string/app_describe"
		android:layout_below="@id/guide_layout_2"
		android:padding="10dp"
		android:id="@+id/textview_describe"
		android:layout_marginTop="15dp"
		android:textSize="15sp"
		android:gravity="center"/>

	<RelativeLayout
		android:id="@+id/guide_layout_3"
		android:layout_below="@id/textview_describe"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:layout_marginTop="15dp"
		android:gravity="center">

		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="200dp"
			android:text="@string/advanced_longpress_get"
			android:layout_centerVertical="true"
			android:layout_marginLeft="20dp"
			android:padding="10dp"/>

		<CheckBox
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/checkbox_longpress_get"
			android:layout_alignParentRight="true"
			android:layout_marginRight="20dp"
			android:layout_centerVertical="true"/>

	</RelativeLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_alignParentRight="false"
		android:layout_alignParentBottom="false"
		android:layout_below="@id/guide_layout_3"
		android:orientation="horizontal"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="15dp">

		<Button
			style="?android:attr/buttonStyleSmall"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/button_recorrect"
			android:text="@string/recorrect"
			android:layout_weight="2.0"/>

		<View
			android:layout_height="match_parent"
			android:layout_width="5dp"/>

		<Button
			style="?android:attr/buttonStyleSmall"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/button_attention"
			android:text="@string/attention_title"
			android:layout_weight="1.0"/>

		<View
			android:layout_height="match_parent"
			android:layout_width="5dp"/>

		<Button
			style="?android:attr/buttonStyleSmall"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/button_advanced"
			android:text="@string/advanced_button"
			android:layout_weight="1.0"/>

	</LinearLayout>

	<TextView
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_width="wrap_content"
		android:text="@string/author"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="5dp"
		android:gravity="center"/>

</RelativeLayout>

